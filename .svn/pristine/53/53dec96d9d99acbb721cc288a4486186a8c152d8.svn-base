/*!
 *  Mobile BBIN
 */

.mob.bbin .mod-bbin-product {
  margin: 0 14px;
  padding-bottom: 15rem;
}
.mob.bbin .mod-bbin-product .ui-item {
    position: relative;
    padding: 0px;
    width: 49%;
    float: left;
    box-sizing: border-box;
    border-radius: 10px;
    margin-bottom: 10px;
    border: none;
    background: none;
    margin-right: 2%;
    border: 1px solid #383838;
}
@media all and (max-width: 320px) {
      .mob.bbin .mod-bbin-product .ui-item{width: 100%;}
      .mob.bbin .mod-bbin-product .ui-link p{right:30% !important;}
      .mob.bbin .mod-bbin-product .ui-link .spr-icon{left: 30% !important;}
    }
.mob.bbin .mod-bbin-product .ui-item:nth-child(2), 
.mob.bbin .mod-bbin-product .ui-item:nth-child(4) {
	margin-right: 0px;
} 
.mob.bbin .mod-bbin-product .ui-link {
    display: block;
    height: 67px;
    text-align: right;
    position: relative;
    padding: 10px;
}
.mob.bbin .mod-bbin-product .ui-link:after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  border-bottom: 1px solid #2b2b2b;
  background-color: #1a1a1a;
  display: none;
}
.mob.bbin .mod-bbin-product .ui-link .spr-icon,
.mob.bbin .mod-bbin-product .ui-link p {
  display: inline-block;
  vertical-align: middle;
}
.mob.bbin .mod-bbin-product .ui-link .spr-icon {
  margin-right: 24px;
  width: 67px;
  height: 67px;
  background-image: url(../img/bbin_spr_x2.png);
  background-repeat: no-repeat;
  background-size: cover;
  position: absolute;
  left: 15%;
}
.mob.bbin .mod-bbin-product .ui-link .icon_live {
  background-position: -134px 0;
}
.mob.bbin .mod-bbin-product .ui-link .icon_sport {
  background-position: -201px 0;
}
.mob.bbin .mod-bbin-product .ui-link .icon_slot {
  background-position: -67px 0;
}
.mob.bbin .mod-bbin-product .ui-link .icon_lotto {
  background-position: -402px 0;
}
.mob.bbin .mod-bbin-product .ui-link p {
   font-size: 14px;
   font-weight: bold;
   height: 67px;
   line-height: 67px;
   padding: 0px;
   margin: 0px;
   position: absolute;
   right: 15%;
}