.slot-type-links {
  
  margin-top: 1rem;

  li {
    width: 50%;
    float: left;
    text-align: center;
    box-sizing: border-box;    
    padding: 0rem 0.5rem 1rem .5rem;

    @media all and (max-width: 320px) {
      width: 100%;
    }

    &.slot-item-ag {
      float: left;
      .slot-link-inner a:after {    
        background-position: top center;
        height: 2.5rem;
        margin-top: -1.25rem;
      }
    }

    &.slot-item-mg {
      .slot-link-inner a:after {
        background-position: center -2.8rem;
      }
    }

    &.slot-item-pt {
      .slot-link-inner a:after {
        background-position: center -6.8rem;
      }
    }

    &.slot-item-os {
      .slot-link-inner a:after {    
        background-position: center -10.5rem;
        height: 3.9rem;
      }
    }

    &.slot-item-ttg {
      .slot-link-inner a:after {
        background-position: center -14.5rem;
      }
    }

    &.slot-item-nt {
      .slot-link-inner a:after {    
        background-position: center -18.2rem;
        height: 2rem;
        margin-top: -1rem;
        left: -.5rem;
      }
    }

    &:slot-item-null {
      .slot-link-inner a {
        padding-left: 0px;
      }
    }

    .slot-link-inner {    
      background: #191d20;
      border-radius: 1.5rem;
      padding: 1rem 1rem;
      position: relative;
      border: 1px solid #383c40;

      a {
        text-align: left;
        display: inline-block;
        padding-left: 5rem;
        position: relative;
        padding-top: .8rem;
        padding-bottom: .8rem;

        &:after {
          content: " ";
          display: block;
          width: 5rem;
          height: 3.5rem;
          position: absolute;
          background-image: url(../images/slot-icons.png);
          background-repeat: no-repeat;
          background-size: 5rem;
          top: 50%; 
          margin-top: -1.75rem;
          left: 0px;
        }
      }
    }
  }
}

.slot-cat-links {
  padding: 0.5rem 1rem;
  border-bottom: 2px solid #424242;

  li {
    width: 25%;
    float: left;
    padding: 0.5rem 0px;
    border-right: 1px solid #828282;
    text-align: center;
    box-sizing: border-box;

    &:last-child {
      position: relative;
      border-right: none;

      &:after {
        content: " ";
        display: block;
        position: absolute;
        right: -.7rem;
        height: 1.4rem;
        width: 1.5rem;
        top: 5px;
        background-image: url(../images/like-on.png);
        background-size: 100%;
      }
    }

    &.active a {
      color: #ffa900;
    }
  }
}

.slot-game-items {
  padding: 0px 1rem;
  
  .slot-game {
    width: 50%;
    float: left;
    box-sizing: border-box;
    padding: 0px .5rem;
  }

  .search-box {
    margin: 1rem 0px;

    .slot-logo {
      width: 28%;
      float: left;
      display: block;
      box-sizing: border-box;
      height: 2.2rem;
      background-position: 0px;
      background-size: 100%;
      margin: 0 1%;

      &.slot-logo-os {
        background-image: url(../images/os.png);
      }
      &.slot-logo-ag {
        background-image: url(../images/ag.png);
      }
      &.slot-logo-mg {
        background-image: url(../images/mg.png);
      }
      &.slot-logo-nt {
        background-image: url(../images/nt.png);
      }
      &.slot-logo-pt {
        background-image: url(../images/pt.png);
      }
      &.slot-logo-ttg {
        background-image: url(../images/ttg.png);
      }
    }

    input {
      width: 68%;
      float: left;
      padding: 0.6rem 0px;
      text-indent: 0.5rem;
      background-color: #2e2e2e;
      border: 1px solid #5e5e5e;
      box-sizing: border-box;
      color: #fff;
      margin-left: 2%;
    }
  }
}


.image-card {

  .img {
    width: 100%;

    i {
      height: 136px;
      background-repeat: no-repeat;
      background-position: center center;
      display: block;
      background-size: 100%;
    }
  }

  .name {
    color: #f3f3f3;
    text-align: center;
    position: relative;
    line-height: 200%;
    padding: 1rem 0px;

    i {
      position: absolute;
      top: 50%;
      right: 0.5rem;
      margin-top: -.7rem;
      height: 1.4rem;
      width: 1.5rem;
      background-size: 100%;

      &.icon-like-on {
        background-image: url(../images/like-on.png);
      }
      &.icon-like-off {
        background-image: url(../images/like-off.png);
      }
    }

  }
}

.no-slot-items {
  p {
    text-align: center;
    color: #fff;
    line-height: 2em;
  }
}
