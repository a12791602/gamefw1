a{
  color:white
}

.page .main-content {
    
  @include clearfix;
  padding: 0 1rem;
  box-sizing: border-box;
  margin-top: .5rem;

  .moneyNav-item {
    float: left;
    width: 32%;
    padding: 1rem 0px;
    text-align: center;
    box-sizing: border-box;
    color: #fffffd;
    background-color: #484d53;
    margin-right: 2%;
    overflow: hidden;

    &:last-child {
      margin-right: 0px;
    }

    &:nth-child(2) {
      .money-nav:before {
        background-position-y: -2rem;
        height: 1.4rem;
        margin-top: -0.7rem;
      }
    }

    &:nth-child(3) {
      .money-nav:before {
        background-position: center -3.5rem;
        height: 2rem;
      }
    }

    .money-nav {
      padding-left: 2.4rem;
      position: relative;

      &:before {
        content: "";
        display: block;
        position: absolute;
        left: 0px;
        width: 2rem;
        background-image: url(../images/icons.png);
        background-repeat: no-repeat;
        background-size: 5rem;
        background-position: center 0px;
        height: 1.9rem;
        top: 50%;
        margin-top: -1rem;
      }

    }
  }
  
  .aboutNavs-item {
    width: 23.5%;
    float: left;
    color: #dedede;
    text-align: center;
    background-color: #232428;
    box-sizing: border-box;
    border: 1px solid #2e3136;
    margin-right: 2%;
    padding: 3rem 0px .5rem 0px;
    position: relative;

    &:before {
      content: "";
      display: block;
      width: 100%;
      height: 2.5rem;
      position: absolute;
      top: 0.3rem;
      left: 0px;
      background-image: url(../images/icons.png);
      background-repeat: no-repeat;
      background-size: 6rem;
      background-position: center -6.8rem;
    }

    &:nth-child(2) {
      &:before {
        background-position: center -9.5rem;
        top: .7rem;
        height: 2rem;
      }
    }

    &:nth-child(3) {
      &:before {
        background-position: center -11.5rem;
        top: .3rem;
        height: 2.4rem;
      }
    }

    &:nth-child(4) {
      &:before {
        background-position: center -14rem;
        top: 0.3rem;
        height: 2.6rem;
      }
    }

    &:last-child {
      margin-right: 0px;
    }
  }

  .game-navs-item {
    width: 49%;
    background-color: #232428;
    border: 1px solid #2d3236;
    float: left;
    box-sizing: border-box;
    margin-right: 2%;
    text-align: center;
    position: relative;
    margin-bottom: .5rem;


    &:nth-child(even) {
      margin-right: 0px;
    }

    a {
      display: inline-block;
      text-align: left;
      line-height: 1.5rem;
      padding-left: 5rem;
      position: relative;
      padding-top: 1rem;
      padding-bottom: 1rem;
      width: 6rem;

      @media all and (max-width: 320px) {
    
      }

      i {
        display: block;

        &.navEng_two, &.navEng_one {
          text-transform: uppercase;
          font-size: 0.8rem;
          font-family: "Arial";
        }
      }

      &:before {
        content: "";
        display: block;
        width: 4rem;
        height: 4.2rem;
        background-image: url(../images/icons.png);
        background-size: 5rem;
        background-position: center -13.8rem;
        position: absolute;
        left: 0px;
        top: 50%;
        margin-top: -2.1rem;

        @media all and (max-width: 320px) {
          
        }
      }
    }

    &:nth-child(1) {
      a:before {
        width: 5rem;
      }
    }

    &:nth-child(2) {
      a:before {
        background-position: center -17.8rem;
        height: 4rem;
        margin-top: -2rem;
        left: .5rem;
      }
    }

    &:nth-child(3) {
      a:before {
        background-position: center -21.8rem;
        height: 3.8rem;
        margin-top: -1.6rem;
        left: 0.5rem;
      }
    }

    &:nth-child(4) {
      a:before {
        background-position: center -25.5rem;
        height: 4rem;
        margin-top: -2rem;
        left: .5rem;
      }
    }
  }


}